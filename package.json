{
  "name": "projeto-aplicado-pos-ead",
  "version": "1.0.0",
  "description": "",
  "main": "src/main.ts",
  "scripts": {
    "compile": "npm run build && npm run lint:fix",
    "dev": "ts-node-dev --respawn --transpile-only --clear --inspect=0.0.0.0:9229 --require dotenv-flow/config src/main/server.ts",
    "clean": "rimraf dist",
    "build": "npm run clean && tsc -p tsconfig-build.json",
    "start": "npm run build && node dist/main/server.js",
    "prepare": "husky",
    "check": "npx ncu -u --interactive",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest --detectOpenHandles --forceExit -silent --passWithNoTests",
    "test:debug": "npm test -- --runInBand",
    "test:unit": "cross-env TEST_TYPE=unit && npm test -- --config ./jest-unit-config.js",
    "test:integration": "cross-env TEST_TYPE=integration && npm test -- --config ./jest-integration-config.js",
    "test:watch": "npm run test:unit -- --watch",
    "test:staged": "npm run test:unit -- --findRelatedTests",
    "test:coverage": "npm run test -- --coverage",
    "knex": "ts-node -r tsconfig-paths/register -r dotenv-flow/config ./node_modules/.bin/knex --knexfile ./src/infra/adapters/knex/knexfile.ts",
    "knex:migrate:create": "npm run knex migrate:make $1 -- --env postgresDb",
    "knex:migrate:run": "npm run knex migrate:latest -- --env postgresDb",
    "knex:seed:create": "npm run knex seed:make $1 -- --env postgresDb",
    "knex:seed:run": "npm run knex seed:run -- --env postgresDb"
  },
  "engines": {
    "node": "22",
    "npm": "11"
  },
  "author": "Lucas Gusm√£o de Freitas",
  "license": "ISC",
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.16",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^22.14.1",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "@types/swagger-ui-express": "^4.1.8",
    "cross-env": "^7.0.3",
    "eslint": "^9.24.0",
    "eslint-config-love": "^119.0.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "jest-sonar-reporter": "^2.0.0",
    "lint-staged": "^15.5.1",
    "npm": "^11.3.0",
    "npm-check-updates": "^17.1.18",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv-flow": "^4.1.0",
    "express": "^4.21.2",
    "fastify": "^5.3.0",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.3",
    "nodemailer": "^6.10.1",
    "pg": "^8.14.1",
    "reflect-metadata": "^0.2.2",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-report.xml",
    "indent": 4
  }
}
