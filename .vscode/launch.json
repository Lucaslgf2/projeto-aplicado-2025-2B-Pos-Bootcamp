  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug with npm start",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "outputCapture": "std",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script","start"],
      //"console": "integratedTerminal",
      "restart": true,
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js",
        "${workspaceFolder}/dist/**/*.map"
      ],
      "skipFiles": ["<node_internals>/**"],
    },

    {
      "name": "Debug Tests",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "outputCapture": "std",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script","test"],
      //"console": "integratedTerminal",
      "restart": true,
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js",
        "${workspaceFolder}/dist/**/*.map"
      ],
      "skipFiles": ["<node_internals>/**"],
    }
  ]
}
